    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="200vp"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <Image
            ohos:id="$+id:top_img"
            ohos:height="200vp"
            ohos:width="match_parent"
            ohos:image_src="$media:login_top"/>

    </DirectionalLayout>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="center">
    </DirectionalLayout>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="80vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="match_content"
            ohos:width="100vp"
            ohos:orientation="horizontal"
            ohos:alignment="right">
            <Text
                ohos:id="$+id:user_name_label"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="$graphic:background_ability_main"
                ohos:layout_alignment="horizontal_center"
                ohos:text="$string:user_name_label"
                ohos:text_size="50"
                />
        </DirectionalLayout>
        <TextField
            ohos:id="$+id:user_name_value"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:hint="$string:user_name_hint"
            ohos:text_alignment="vertical_center"
            ohos:text_size="50"
            ohos:basement="#000099"
            />

    </DirectionalLayout>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="80vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="match_content"
            ohos:width="100vp"
            ohos:orientation="horizontal"
            ohos:alignment="right">
            <Text
                ohos:id="$+id:pwd_label"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="$graphic:background_ability_main"
                ohos:layout_alignment="horizontal_center"
                ohos:text="$string:pwd_label"
                ohos:text_size="50"
                />
        </DirectionalLayout>
        <TextField
            ohos:id="$+id:pwd_value"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:hint="$string:pwd_hint"
            ohos:text_alignment="vertical_center"
            ohos:text_size="50"
            ohos:basement="#000099"
            ohos:text_input_type="pattern_password"
            />

    </DirectionalLayout>
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="80vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="80vp"
            ohos:width="160vp"
            ohos:orientation="horizontal"
            ohos:alignment="center">
            <DirectionalLayout
                xmlns:ohos="http://schemas.huawei.com/res/ohos"
                ohos:height="match_content"
                ohos:width="100vp"
                ohos:orientation="horizontal"
                ohos:alignment="right">
                <Text
                    ohos:id="$+id:remember_me_label"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:background_element="$graphic:background_ability_main"
                    ohos:layout_alignment="horizontal_center"
                    ohos:text="$string:remember_me_label"
                    ohos:text_size="50"
                    />
            </DirectionalLayout>
            <Switch
                ohos:id="$+id:remember_me_value"
                ohos:height="30vp"
                ohos:width="60vp"/>
        </DirectionalLayout>
        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="80vp"
            ohos:width="160vp"
            ohos:orientation="horizontal"
            ohos:alignment="center">
            <DirectionalLayout
                xmlns:ohos="http://schemas.huawei.com/res/ohos"
                ohos:height="match_content"
                ohos:width="100vp"
                ohos:orientation="horizontal"
                ohos:alignment="right">
                <Text
                    ohos:id="$+id:direct_login_label"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:background_element="$graphic:background_ability_main"
                    ohos:layout_alignment="horizontal_center"
                    ohos:text="$string:direct_login_label"
                    ohos:text_size="50"
                    />
            </DirectionalLayout>
            <Switch
                ohos:id="$+id:direct_login_value"
                ohos:height="30vp"
                ohos:width="60vp"
                />
        </DirectionalLayout>
    </DirectionalLayout>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="center">
    </DirectionalLayout>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="100vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:alignment="center">

        <Button
            ohos:id="$+id:login_but"
            ohos:width="200vp"
            ohos:height="match_content"
            ohos:text_size="30fp"
            ohos:background_element="$graphic:capsule_button_element"
            ohos:text="$string:login_but_text"
            ohos:layout_alignment="horizontal_center"
            ohos:left_margin="15vp"
            ohos:bottom_margin="15vp"
            ohos:right_padding="15vp"
            ohos:left_padding="15vp"
            />
    </DirectionalLayout>

